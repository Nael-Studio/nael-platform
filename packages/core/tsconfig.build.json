{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "emitDeclarationOnly": false,
    "declaration": true,
    "declarationMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "noEmit": false,
    "paths": {
      "@nl-framework/logger": ["../logger/dist/index.d.ts"],
      "@nl-framework/logger/*": ["../logger/dist/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["tests/**/*"]
}
