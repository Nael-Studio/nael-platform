{
  "name": "@nl-framework/mcp-server",
  "version": "0.2.16",
  "description": "Model Context Protocol server for the Nael Framework. Provides interactive documentation, scaffolding prompts, and project bootstrap helpers for AI assistants.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "@nl-framework/mcp-server": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bunx tsc --build tsconfig.build.json",
    "clean": "rm -rf dist tsconfig.build.tsbuildinfo",
    "dev": "bun run src/index.ts",
    "dev:sse": "bun run src/sse-server.ts",
    "dev:http": "bun run src/streamable-server.ts",
    "test": "bun test",
    "docker:build": "docker build -f packages/mcp-server/Dockerfile -t nl-framework/mcp-server .",
    "docker:run": "docker run --rm -p 3000:3000 nl-framework/mcp-server"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.19.1",
    "@nl-framework/core": "^0.2.16",
    "@nl-framework/http": "^0.2.16",
    "@nl-framework/graphql": "^0.2.16",
    "@nl-framework/auth": "^0.2.16",
    "@nl-framework/microservices": "^0.2.16",
    "@nl-framework/platform": "^0.2.16",
    "@nl-framework/config": "^0.2.16",
    "@nl-framework/logger": "^0.2.16",
    "@nl-framework/scheduler": "^0.2.16",
    "@nl-framework/orm": "^0.2.16",
    "yaml": "^2.8.0",
    "zod": "^3.23.8"
  }
}
