{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "baseUrl": ".",
    "types": ["bun-types"],
    "paths": {
      "@nl-framework/*": ["packages/*/src"],
      "@nl-framework/logger": ["packages/logger/src"],
      "@nl-framework/logger/*": ["packages/logger/src/*"],
      "@nl-framework/config": ["packages/config/src"],
      "@nl-framework/config/*": ["packages/config/src/*"],
      "@nl-framework/orm": ["packages/orm/src"],
      "@nl-framework/orm/*": ["packages/orm/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "coverage"],
  "include": ["packages/**/*", "examples/**/*", "scripts/**/*"]
}
